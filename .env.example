# Liberation System Environment Configuration
# Copy this file to .env and update with your values

# Environment
LIBERATION_ENV=development

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=liberation_system
DATABASE_USER=liberation_user
DATABASE_PASSWORD=your_password_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# System Configuration
TRUST_LEVEL=maximum
VERIFICATION_REQUIRED=false
AUTH_BYPASS=true
RESOURCE_POOL=19000000000000
MESH_NETWORK_ENABLED=true
AUTO_DISCOVERY=true
SYNC_INTERVAL=1000

# Security Configuration
TRUST_DEFAULT=true
AUDIT_LOGGING=true
SECURITY_HEADERS=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/liberation_system.log

# Optional: Override default settings
# TASK_CYCLE_DELAY=60
# MAX_REQUEST_SIZE=10485760
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW=60
