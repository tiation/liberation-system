{
  "database": {
    "host": "localhost",
    "port": 5432,
    "database": "liberation_system",
    "username": "liberation_user",
    "password": "YOUR_DATABASE_PASSWORD",
    "pool_size": 10,
    "max_overflow": 20,
    "sqlite_fallback": true,
    "sqlite_path": "data/liberation_system.db"
  },
  "api": {
    "host": "0.0.0.0",
    "port": 8000,
    "debug": false,
    "cors_origins": [
      "*"
    ],
    "max_request_size": 10485760,
    "rate_limit_requests": 100,
    "rate_limit_window": 60
  },
  "system": {
    "trust_level": "maximum",
    "verification_required": false,
    "auth_bypass": true,
    "resource_pool": 19000000000000,
    "mesh_network_enabled": true,
    "auto_discovery": true,
    "sync_interval": 1000,
    "task_cycle_delay": 60
  },
  "security": {
    "trust_default": true,
    "audit_logging": true,
    "security_headers": true,
    "max_login_attempts": 5,
    "session_timeout": 3600,
    "encryption_enabled": false
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file_path": "logs/liberation_system.log",
    "max_file_size": 10485760,
    "backup_count": 5,
    "console_logging": true
  }
}